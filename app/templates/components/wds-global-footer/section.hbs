<section class="wds-global-footer__{{@parentName}}-section wds-is-{{@name}}">
	{{#if @model.header.title}}
		<h3 class="wds-global-footer__section-header">{{i18n @model.header.title.key ns='design-system'}}</h3>
	{{/if}}

	{{#if @model.description}}
		<span class="wds-global-footer__section-description">{{i18n @model.description.key ns='design-system'}}</span>
	{{/if}}

	<ul class="wds-global-footer__links-list">
		{{#each @model.links as |link|}}
			<li class="wds-global-footer__links-list-item">
				{{#if (equal 'link-image' link.type)}}
					{{wds-global-footer/link-image model=link track=this.attrs.track}}
				{{else if (equal 'link-branded' link.type)}}
					{{wds-global-footer/link-branded model=link track=this.attrs.track}}
				{{else}}
					{{wds-global-footer/link-text model=link track=this.attrs.track}}
				{{/if}}
			</li>
		{{/each}}
	</ul>
</section>
