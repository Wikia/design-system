<div class="wds-avatar" data-tracking-label={{@data-tracking-label}}>
	{{#if @link}}
		<a href="{{@link}}">
			{{wds-avatar/avatar-image src=@src alt=@alt}}
		</a>
	{{else}}
		{{wds-avatar/avatar-image src=@src alt=@alt}}
	{{/if}}
	
	{{#if @badge}}
		{{wds-avatar/avatar-badge name=@badge}}
	{{/if}}
</div>
