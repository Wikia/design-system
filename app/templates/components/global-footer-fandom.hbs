<footer class="wds-global-footer">
  {{#if @model.header}}
    <h2 class="wds-global-footer__header">
      <a href={{@model.header.href}} title={{@model.header.title.value}}>
        {{svg
          @model.header.image-data.name
          class="wds-global-footer__header-logo"
        }}
      </a>
    </h2>
  {{/if}}
  <div class="wds-global-footer__main">
    <div class="wds-global-footer__column">
      {{global-footer/section model=@model.fandom_overview name="fandom-overview" }}
      {{global-footer/section model=@model.follow_us name="follow-us" }}
    </div>
    <div class="wds-global-footer__column">
      {{global-footer/section model=@model.site_overview name="site-overview" }}
    </div>
    <div class="wds-global-footer__column">
      {{global-footer/section model=@model.community name="community" }}
      {{global-footer/section model=@model.advertise name="advertise" }}
    </div>
    <div class="wds-global-footer__column">
      {{global-footer/section model=@model.fandom_apps name="fandom-apps" }}
      {{global-footer/section model=@model.fandom_stores name="fandom-stores" }}
    </div>
  </div>
  {{global-footer/bottom-bar model=@model}}
</footer>
