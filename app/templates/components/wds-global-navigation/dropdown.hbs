{{#wds-dropdown
	class=additionalClassNames
	as |dropdown|
}}
	{{#dropdown.toggle
		class='wds-global-navigation__dropdown-toggle'
		title=(if showAvatar model.header.username.value)
	}}
		{{#if showAvatar}}
			{{wds-avatar src=model.header.url alt=model.header.username.value}}
		{{else}}
			<span>{{i18n model.header.title.key}}</span>
		{{/if}}
	{{/dropdown.toggle}}
	{{#dropdown.content
		class='wds-global-navigation__dropdown-content'
		dropdownRightAligned=dropdownRightAligned
	}}
		{{#wds-list linked=true}}
			{{#each model.links as |link|}}
				{{wds-global-navigation/link
					model=link
					dropdownLinks=true
					tagName='li'
				}}
			{{/each}}
		{{/wds-list}}
	{{/dropdown.content}}
{{/wds-dropdown}}
