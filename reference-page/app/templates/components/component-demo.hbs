{{#if standaloneDevice}}
	<div class="component-demo__fullscreen">
		<div class="component-demo__close" {{action 'closeFullscreen'}}>{{wds-icon name='cross'}}</div>
		<div class="component-demo__standalone-wrapper">
			<iframe class="component-demo__standalone is-{{standaloneDevice}}" src="{{rootURL}}{{variantUrl}}"></iframe>
		</div>
	</div>
{{/if}}

<div class="component-demo__rendered{{if codeOnly ' is-hidden'}}">{{yield}}</div>

{{#if standalone}}
	<div class="component-demo__devices">
		<div class="component-demo__device">
			<img src="{{rootURL}}images/{{componentName}}-mobile.png">
			<p>Breakpoint: S</p>
			<button class="wds-button" {{action 'showFullscreen' 'mobile'}}>View mobile version</button>
		</div>
		<div class="component-demo__device">
			<img src="{{rootURL}}images/{{componentName}}-tablet.png">
			<p>Breakpoints: M, L</p>
			<button class="wds-button" {{action 'showFullscreen' 'tablet'}}>View tablet version</button>
		</div>
		<div class="component-demo__device">
			<img src="{{rootURL}}images/{{componentName}}-desktop.png">
			<p>Breakpoints: XL, XXL</p>
			<button class="wds-button" {{action 'showFullscreen' 'desktop'}}>View desktop version</button>
		</div>
	</div>
{{/if}}

